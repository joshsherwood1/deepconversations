<h2>Hosts</h2>
<br>
<div class="container-fluid px-0">
  <div class="row">
    <% @hosts.each do |host| %>
    <div class="col-md-4 padding-0">
      <h2><%=link_to host.name, "/host/#{host.id}"%></h2>
      <p style = "font-family: 'Source Sans Pro', sans-serif;"><%=host.description%></p>
    </div>
    <% end %>
  </div>
</div>
<br>
